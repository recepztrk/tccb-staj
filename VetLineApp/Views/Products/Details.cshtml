@model VetLineApp.Models.Product

@{
    ViewData["Title"] = "Ürün Detayı";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card shadow">
                <div class="row g-0">
                    <div class="col-md-4">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" class="img-fluid rounded-start h-100" alt="@Model.Name" style="object-fit: cover;">
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center h-100 bg-light rounded-start">
                                <i class="fas fa-image fa-5x text-muted"></i>
                            </div>
                        }
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h3 class="card-title text-primary">@Model.Name</h3>
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-outline-warning btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@Model.ProductId" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                }
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="mb-3">
                                    <h6 class="text-muted">Açıklama</h6>
                                    <p class="card-text">@Model.Description</p>
                                </div>
                            }

                            <div class="row mb-3">
                                <div class="col-sm-6">
                                    <h6 class="text-muted">Kategori</h6>
                                    <p class="mb-2">
                                        @if (!string.IsNullOrEmpty(Model.Category))
                                        {
                                            <span class="badge bg-secondary fs-6">@Model.Category</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Belirtilmemiş</span>
                                        }
                                    </p>
                                </div>
                                <div class="col-sm-6">
                                    <h6 class="text-muted">Hayvan Türü</h6>
                                    <p class="mb-2">
                                        @if (!string.IsNullOrEmpty(Model.AnimalType))
                                        {
                                            <span class="badge bg-info fs-6">@Model.AnimalType</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Belirtilmemiş</span>
                                        }
                                    </p>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-6">
                                    <h6 class="text-muted">Marka</h6>
                                    <p class="mb-2">@(Model.Brand ?? "Belirtilmemiş")</p>
                                </div>
                                <div class="col-sm-6">
                                    <h6 class="text-muted">Stok Durumu</h6>
                                    <p class="mb-2">
                                        @if (Model.Stock > 0)
                                        {
                                            <span class="badge bg-success fs-6">@Model.Stock adet mevcut</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger fs-6">Stokta yok</span>
                                        }
                                    </p>
                                </div>
                            </div>

                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                <strong>Bilgi:</strong> Bu ürün online satışa sunulmamaktadır. Fiyat bilgisi için kliniğimizi arayabilirsiniz.
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Ürünlere Dön
                                </a>
                                <div>
                                    <button class="btn btn-primary" onclick="window.print()">
                                        <i class="fas fa-print"></i> Yazdır
                                    </button>
                                    <button class="btn btn-outline-primary" onclick="shareProduct()">
                                        <i class="fas fa-share"></i> Paylaş
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function shareProduct() {
        if (navigator.share) {
            navigator.share({
                title: '@Model.Name',
                text: '@Model.Description',
                url: window.location.href
            });
        } else {
            // Fallback for browsers that don't support Web Share API
            navigator.clipboard.writeText(window.location.href);
            alert('Ürün linki panoya kopyalandı!');
        }
    }
</script>
