@{
    ViewData["Title"] = "Hesap Kilitlendi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark text-center">
                    <h3 class="mb-0">
                        <i class="fas fa-lock"></i> Hesap Kilitlendi
                    </h3>
                </div>
                <div class="card-body text-center p-4">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle fa-3x text-warning"></i>
                    </div>
                    <h5>Hesabınız geçici olarak kilitlendi</h5>
                    <p class="text-muted">
                        Çok fazla başarısız giriş denemesi yaptığınız için hesabınız güvenlik nedeniyle kilitlenmiştir.
                        Lütfen birkaç dakika sonra tekrar deneyin.
                    </p>
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home"></i> Ana Sayfaya Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
