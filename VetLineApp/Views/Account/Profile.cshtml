@model VetLineApp.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Profil Ayarları";
    
    // Admin kullanıcılar için admin layout'u kullan
    if (ViewBag.Layout != null)
    {
        Layout = ViewBag.Layout;
    }
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-user-cog me-2"></i> Profil Ayarları
                    </h3>
                </div>
                <div class="card-body p-4">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["Info"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            <i class="fas fa-info-circle me-2"></i> @TempData["Info"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Profile" method="post">
                        @Html.AntiForgeryToken()
                        
                        <!-- Kişisel Bilgiler -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-user me-2"></i> Kişisel Bilgiler
                                </h5>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label fw-semibold"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label fw-semibold"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-semibold"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                                @if (Model.EmailVerified)
                                {
                                    <div class="form-text text-success">
                                        <i class="fas fa-check-circle me-1"></i> Email doğrulandı
                                    </div>
                                }
                                else
                                {
                                    <div class="form-text text-warning">
                                        <i class="fas fa-exclamation-triangle me-1"></i> Email doğrulanmadı
                                    </div>
                                }
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label fw-semibold"></label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Şifre Değiştirme -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-lock me-2"></i> Şifre Değiştir
                                </h5>
                                <p class="text-muted small mb-3">Şifrenizi değiştirmek istemiyorsanız bu alanları boş bırakın.</p>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label asp-for="CurrentPassword" class="form-label fw-semibold"></label>
                                <input asp-for="CurrentPassword" type="password" class="form-control" />
                                <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewPassword" class="form-label fw-semibold"></label>
                                <input asp-for="NewPassword" type="password" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmNewPassword" class="form-label fw-semibold"></label>
                                <input asp-for="ConfirmNewPassword" type="password" class="form-control" />
                                <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Hesap Bilgileri -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-info-circle me-2"></i> Hesap Bilgileri
                                </h5>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Kayıt Tarihi</label>
                                <input type="text" class="form-control" value="@Model.CreatedAt.ToString("dd.MM.yyyy")" readonly />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Email Durumu</label>
                                <input type="text" class="form-control" value="@(Model.EmailVerified ? "Doğrulandı" : "Doğrulanmadı")" readonly />
                            </div>
                        </div>

                        <!-- Butonlar -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    @if (ViewBag.Layout == "_AdminLayout")
                                    {
                                        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary">
                                            <i class="fas fa-arrow-left me-2"></i> Admin Paneline Dön
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                            <i class="fas fa-arrow-left me-2"></i> Ana Sayfaya Dön
                                        </a>
                                    }
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-2"></i> Değişiklikleri Kaydet
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
