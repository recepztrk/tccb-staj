@model VetLineApp.Models.Animal

@{
    ViewData["Title"] = "Hayvan Sil";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Hayvan Silme Onayı
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Dikkat!
                        </h5>
                        <p class="mb-0">
                            Bu hayvanı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz ve hayvanın tüm randevu geçmişi de silinecektir.
                        </p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-primary mb-3">Hayvan Bilgileri</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Ad:</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Tür:</dt>
                                <dd class="col-sm-8">@Model.Type</dd>

                                <dt class="col-sm-4">Cins:</dt>
                                <dd class="col-sm-8">@(Model.Breed ?? "Belirtilmemiş")</dd>

                                <dt class="col-sm-4">Cinsiyet:</dt>
                                <dd class="col-sm-8">@(Model.Gender ?? "Belirtilmemiş")</dd>

                                <dt class="col-sm-4">Doğum Tarihi:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.BirthDate.HasValue)
                                    {
                                        @Model.BirthDate.Value.ToString("dd.MM.yyyy")
                                        <br>
                                        <small class="text-muted">
                                            (@(DateTime.Now.Year - Model.BirthDate.Value.Year) yaşında)
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Belirtilmemiş</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-primary mb-3">Sahip Bilgileri</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Ad Soyad:</dt>
                                <dd class="col-sm-8">@Model.User.FirstName @Model.User.LastName</dd>

                                <dt class="col-sm-4">E-posta:</dt>
                                <dd class="col-sm-8">@Model.User.Email</dd>
                            </dl>

                            @if (Model.Appointments != null && Model.Appointments.Any())
                            {
                                <hr class="my-3">
                                <h6 class="text-warning">
                                    <i class="fas fa-calendar-times me-1"></i>
                                    Aktif Randevular
                                </h6>
                                <p class="text-muted small">
                                    Bu hayvanın <strong>@Model.Appointments.Count(a => a.AppointmentDateTime > DateTime.Now)</strong> aktif randevusu bulunmaktadır.
                                    Silme işlemi bu randevuları da iptal edecektir.
                                </p>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="AnimalId" />
                        <button type="submit" class="btn btn-danger me-2" onclick="return confirm('Bu hayvanı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!')">
                            <i class="fas fa-trash me-1"></i>
                            Evet, Sil
                        </button>
                    </form>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-arrow-left me-1"></i>
                        Geri Dön
                    </a>
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-list me-1"></i>
                        Tüm Hayvanlar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
