@model VetLineApp.Models.Appointment

@{
    ViewData["Title"] = "Randevuyu İptal Et";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Randevuyu İptal Et
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-info-circle"></i> 
                        <strong>Dikkat!</strong> Bu işlem geri alınamaz. Randevunuzu iptal etmek istediğinizden emin misiniz?
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h6 class="text-muted">
                                    <i class="fas fa-calendar"></i> Randevu Tarihi
                                </h6>
                                <p class="h6">@Model.AppointmentDateTime.ToString("dd MMMM yyyy, HH:mm")</p>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h6 class="text-muted">
                                    <i class="fas fa-paw"></i> Evcil Hayvan
                                </h6>
                                <p class="h6">@Model.Animal.Name</p>
                                <small class="text-muted">@Model.Animal.Type - @Model.Animal.Breed</small>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Complaint))
                    {
                        <div class="mb-3">
                            <h6 class="text-muted">
                                <i class="fas fa-comment-medical"></i> Şikayet
                            </h6>
                            <div class="alert alert-light">
                                <p class="mb-0">@Model.Complaint</p>
                            </div>
                        </div>
                    }
                </div>
                
                <div class="card-footer bg-light">
                    <form asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="AppointmentId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Vazgeç
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-times"></i> Evet, İptal Et
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
