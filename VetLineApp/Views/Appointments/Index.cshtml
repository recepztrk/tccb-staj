@model IEnumerable<VetLineApp.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h2 class="display-4 text-primary">Randevular</h2>
            <p class="lead">Veteriner randevu takip sistemi</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-4">
        <div class="col-12 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Yeni Randevu Al
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Randevu Tarihi</th>
                                <th>Kullanıcı</th>
                                <th>Hayvan</th>
                                <th>Hizmet</th>
                                <th>Şikayet</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@appointment.AppointmentDateTime.ToString("dd.MM.yyyy HH:mm")</strong>
                                    </td>
                                    <td>
                                        <span class="text-muted">Randevu Sahibi: Siz</span>
                                    </td>
                                    <td>
                                        <strong>@appointment.Animal.Name</strong>
                                        <br>
                                        <small class="text-muted">@appointment.Animal.Type - @appointment.Animal.Breed</small>
                                    </td>
                                    <td>
                                        @if (appointment.Service != null)
                                        {
                                            <span class="badge bg-info">@appointment.Service.Title</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Hizmet belirtilmemiş</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(appointment.Complaint))
                                        {
                                            <span>@(appointment.Complaint.Length > 50 ? appointment.Complaint.Substring(0, 50) + "..." : appointment.Complaint)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Şikayet belirtilmemiş</span>
                                        }
                                    </td>
                                    <td>
                                        @if (appointment.AppointmentDateTime > DateTime.Now)
                                        {
                                            <span class="badge bg-success">Gelecek</span>
                                        }
                                        else if (appointment.AppointmentDateTime.Date == DateTime.Now.Date)
                                        {
                                            <span class="badge bg-warning">Bugün</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Geçmiş</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <!-- Tüm randevular için detaylar butonu -->
                                            <a asp-action="Details" asp-route-id="@appointment.AppointmentId" class="btn btn-outline-primary btn-sm" title="Randevu Detayları">
                                                <i class="fas fa-eye"></i> Detaylar
                                            </a>
                                            
                                            @if (appointment.AppointmentDateTime > DateTime.Now)
                                            {
                                                <!-- Gelecek randevular için iptal butonu -->
                                                <a asp-action="Delete" asp-route-id="@appointment.AppointmentId" class="btn btn-outline-danger btn-sm" title="Randevuyu İptal Et">
                                                    <i class="fas fa-times"></i> İptal
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Henüz randevunuz bulunmamaktadır.
                    </div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> İlk Randevunuzu Alın
                    </a>
                </div>
            }
        </div>
    </div>
</div>
